#: ../../effects_and_compositions/subtitles.rst:169
msgid "``<b>text in boldface</b>``"
msgstr "``<b>text en negreta</b>``"

# skip-rule: t-acc_obe
#: ../../effects_and_compositions/subtitles.rst:170
msgid "``<i>text in italics</i>``"
msgstr "``<i>text en cursiva</i>``"

# skip-rule: t-acc_obe
#: ../../effects_and_compositions/subtitles.rst:171
msgid "``<u>text underlined</u>``"
msgstr "``<u>text subratllat</u>``"

